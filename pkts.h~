
struct r_packet {
  char mac_address[18];
  char essid[48] ;
  u_int16_t  freq ;
  u_int8_t db_sig;
  u_int8_t db_noise;
  int8_t dbm_sig;
  int8_t dbm_noise;
  u_int8_t rate; // check if this is float
  u_int8_t antenna;

  int bad_fcs_err;
  int short_preamble_err;
  int radiotap_wep_err;
  int frag_err;
  int cfp_err ;
  int retry ;
  u_int8_t channel;

  int strictly_ordered;
  int pwr_mgmt;
  int wep_enc;
  int more_frag;
  char channel_info[5];

  u_int8_t cap_privacy ;
  int cap_ess_ibss ;
};
